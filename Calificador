        <table border="1" cellspacing="5" bgcolor="white" 
               height="100" width="500" cellpadding="5" id="TableScore">
            <caption><b>Datos</b></caption>
            <tr>
                <th width="180">Matricula</th>
                <th width="180">Nombre</th>
                <th width="120">Promedio</th>
